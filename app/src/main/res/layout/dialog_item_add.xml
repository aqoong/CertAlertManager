<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_width="300dp" android:layout_height="match_parent">

    <TextView
        android:text="프로젝트명"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="인증서 등록 날짜"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/dialog_regi_date"
        android:inputType="date"
        android:hint="20181210"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="8"/>

    <TextView
        android:text="인증서 만료 날짜"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/dialog_end_date"
        android:inputType="date"
        android:hint="20191210"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="8"/>


    <include
        layout="@layout/dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
